@model IEnumerable<PulseNetwork.Models.Workspace>
@using PulseNetwork.Utils
@using Microsoft.AspNet.Identity
@{
    BusinessLogic bl = new BusinessLogic();
}


<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Workspace Name
        </th>
        <th>
            Shared With
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @foreach(var user in bl.FindUsersInWorkspace(item.id))
            {
                if (!(user.Id.Equals(User.Identity.GetUserId()))) { 
            @Html.DisplayFor(modelItem => user.UserName) @: 
            }
            }
            
        </td>
        <td>
            @Html.ActionLink("Open", "Details", new { id=item.id }) |
            @if (item.creatorID.Equals(User.Identity.GetUserId())) { 
            @Html.ActionLink("Delete", "Delete", new { id=item.id })
            }
        </td>
    </tr>
}

</table>
